{%  extends "base.html.twig" %}

{% block body %}

    <div id="info" class="content">
            {% if err %}
                <h2 style="color: red;">{{ err }}</h2>
            {% endif %}

            <form method="POST" class="formLighter">
                <h3><b> {{ username }}</b>, dodaj informacje o sobie!</h3>
                <h4>Wpisz swoje miasto lub pobierz lokalizację</h4>
                <div class="row">
                    <label>Twoje miasto</label><br>
                    <input type="text" id="cityToBlock" name="city" placeholder="nazwa miasto"/><br>

                    <label>Twoje województwo</label><br>
                    <select name="voivodeship" id="voivodeshipToBlock">
                        <option value="">wybierz</option>
                        <option value="opolskie">opolskie</option>
                        <option value="mazowieckie">mazowieckie</option>
                        <option value="lubelskie">lubelskie</option>
                        <option value="lubuskie">lubuskie</option>
                        <option value="podkarpackie">podkarpackie</option>
                        <option value="podlaskie">podlaskie</option>
                        <option value="pomorskie">pomorskie</option>
                        <option value="wielkopolskie">wielkopolskie</option>
                        <option value="zachodniopomorskie">zachodniopomorskie</option>
                        <option value="dolnośląskie">dolnośląskie</option>
                        <option value="kujawsko-pomorskie">kujawsko-pomorskie</option>
                        <option value="łódzkie">łódzkie</option>
                        <option value="małopolskie">małopolskie</option>
                        <option value="śląskie">śląskie</option>
                        <option value="świętokrzyskie">świętokrzyskie</option>
                        <option value="warmińsko-mazurskie">warmińsko-mazurskie</option>
                    </select><br>
                <div id="checkLocation">
                    <p>Pobierz swoją lokalizację: <button id="check" onclick="getLocation(); return false;">KLIK</button>
                    <span id="cityVal"></span><input type="hidden" id="city" name="city" value="" disabled/>
                        <span id="voivodeshipVal"></span><input type="hidden" id="voivodeship" name="voivodeship" value="" disabled/></p>
                </div>
                    <label>Chcesz dołączyć do lokalnej grupy treningowej?</label>
                    <select name="eagerToWorkout">
                        <option value="1">TAK</option>
                        <option value="0">NIE</option>
                    </select><br>
                    <label>Chętny, aby nawiązać przyjaźń?</label>
                    <select name="eagerToMeet">
                        <option value="1">TAK</option>
                        <option value="0">NIE</option>
                    </select><br>
                    <label>Szukasz partnera/partnerki?</label>
                    <select name="eagerToDate">
                        <option value="1">TAK</option>
                        <option value="0">NIE</option>
                    </select><br><br>
                    <input type="hidden" name="clientId" value="{{ userId }}"/>
                    <button type="submit" class="btn btn-primary">Wyślij formularz</button>
                </div>
            </form>
        <script src="{{ asset('js/addCity.js') }}"></script>
    </div>



{% endblock %}