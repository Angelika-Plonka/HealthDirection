<form method="post" action="{{ path('fitness_delete', {'id': fitness.id }) }}" onsubmit="return confirm('Chcesz usunąć ten pomiar?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fitness.id ) }}">
    <button class="btn btn-danger">
        <span class="mdi mdi-delete" aria-hidden="true"></span>usuń
    </button>
</form>